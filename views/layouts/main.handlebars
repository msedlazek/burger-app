<h1>Burger Eater!</h1>

<h2>Your Desired Burgers</h2>

<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.name}}
				<form action="burgers/{{this.id}}?_method=PUT" method="POST">
         			<input type="hidden" name="devoured" value="true">
          			<button type="submit">DEVOUR!</button>
        		</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

<h2>Burgers You Have Devoured</h2>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.name}}
			</li>
		{{/if}}
	{{/each}}
</ul>

<h2>Add a Burger</h2>
	<form class="burger-create" action="burgers/create" method="POST">

  		<div class="form-group">
    		<label for="ca">Burger Name:</label>
   			<input type="text" id="burg" name="name">
  		</div>

  	<button type="submit">Add Burger</button>
</form>